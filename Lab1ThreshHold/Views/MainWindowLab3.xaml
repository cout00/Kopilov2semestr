<catel:Window
    x:Class="Lab1ThreshHold.Views.MainWindowLab3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catel="http://schemas.catelproject.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lab1ThreshHold.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindowLab3"
    Width="400"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Image
            x:Name="imageSobel"
            Grid.Row="0"
            Margin="0"
            Source="{Binding SobelResult}"
            Stretch="Fill" />
        <Image
            x:Name="imageMain"
            Grid.Row="1"
            Margin="0"
            Source="{Binding MainResult}"
            Stretch="Fill" />
    </Grid>
</catel:Window>
